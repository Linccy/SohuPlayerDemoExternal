<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <!-- VideoView's Container -->
    <com.sohuvideo.api.SohuScreenView 
        android:id="@+id/screen_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:background="@color/black" />
    <TextView 
        android:id="@+id/count_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_medium"/>
    <RelativeLayout 
        android:id="@+id/screen_mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_screen_mask">
    </RelativeLayout>
    
    <ImageView 
        android:id="@+id/btn_start_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_start_play"/>
    
    <ProgressBar 
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminateDrawable="@drawable/progress_bar_fox_tail"/>
    <LinearLayout 
        android:id="@+id/gesture_layout_progress"
        android:layout_width="180dp"
        android:layout_height="87dp"
        android:background="@drawable/player_gesture_bg"
        android:layout_centerInParent="true"
        android:padding="15dp"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView 
                android:id="@+id/gesture_backward_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/player_backward"/>
            <TextView
                android:id="@+id/gesture_tip_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#cccccc"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
            <ImageView 
                android:id="@+id/gesture_forward_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/player_forward"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="5dp">
            <TextView
                android:id="@+id/gesture_cur_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#ffffff"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#ffffff"
                android:text="/"/>
            <TextView
                android:id="@+id/gesture_total_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#80ffffff"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/gesture_layout_volumn"
        android:layout_width="130dp"
        android:layout_height="87dp"
        android:background="@drawable/player_gesture_bg"
        android:layout_centerInParent="true"
        android:padding="15dp"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">
        <ImageView 
            android:id="@+id/gesture_icon_volumn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/player_silence"/>
        <TextView
            android:id="@+id/gesture_percent_volumn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#ffffff"/>
    </LinearLayout>
</RelativeLayout>